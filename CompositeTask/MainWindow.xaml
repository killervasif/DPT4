<Window x:Class="CompositeTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompositeTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Button FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click">Choose Folder</Button>

        <ListView Grid.Row="1" ItemsSource="{Binding CurrentFolder.SystemItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Name="txtSize" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2"></TextBlock>
    </Grid>
</Window>
